pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Install pip3') {
            steps {
                sh ' sudo apt update && sudo apt install python3-pip -y'
            }
        }
            
    stages {
        stage('build') {
            steps {
                sh 'pip3 install -r s05/python-simple-app/requirements.txt'
            }
        }

        stage('run') {
            steps {
                sh 'python3 s05/python-simple-app/app.py &'
            }
        }

        stage('test') {
            steps {
                sh 'sleep 60 && curl -s localhost:8000'
            }
        }

        stage('cleanup') {
            steps {
                sh 'fuser -k 8000/tcp'
            }
        }

    }
}
